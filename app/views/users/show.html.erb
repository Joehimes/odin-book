<h1><%= current_user.email %></h1>

<div>
    <% if !current_user.profile %>
        <%= link_to 'Create Profile', new_profile_path %>
    <% else %>
        <%= current_user.profile.name %><br>
        <%= current_user.profile.location %><br>
        <%= current_user.profile.age %>
    <% end %>
</div>

<div>
    <% current_user.posts.each do |post| %>
        <p>
            <%= post.body %>
            <% if current_user.id == post.user_id %>
                <%= link_to "edit", edit_post_path(post) %>
                <%= link_to 'delete', post_path(post), method: :delete %>
            <% end %>
        </p>
    <% end %>
</div>

<div>
    <h3>Friends</h3>
    <% current_user.friends.each do |friend| %>
        <p><%= friend.profile.name %></p>
        <%= link_to "delete", friends_destroy_path(id: friend.id) %>
    <% end %>
</div>

<div>
    <h3>Friend Requests</h3>
    <% current_user.friend_requests.each do |request| %>
        <p><%= request.friend.profile.name %><p>
        <%= link_to "accept", friend_request_path(request), method: :patch %>
    <% end %>
</div>